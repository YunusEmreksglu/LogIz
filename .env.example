# ===========================================
# LogIz - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in the values

# Database - SQLite (default)
DATABASE_URL="file:./dev.db"

# NextAuth.js (Optional - for authentication)
# NEXTAUTH_SECRET="your-super-secret-key-here"
# NEXTAUTH_URL="http://localhost:3000"

# Python API URL (for Next.js API routes)
PYTHON_API_URL="http://127.0.0.1:5000/api"

# Email Notifications (Optional)
# SMTP_HOST="smtp.example.com"
# SMTP_PORT=587
# SMTP_USER="your-email@example.com"
# SMTP_PASS="your-password"
# SMTP_FROM="noreply@logiz.local"

# SSH Monitoring (Optional - for live monitoring)
# SSH_HOST="your-server.com"
# SSH_PORT=22
# SSH_USER="username"
# SSH_KEY_PATH="/path/to/private/key"
# SSH_LOG_PATH="/var/log/auth.log"

# Docker Streaming (Optional)
# DOCKER_HOST="unix:///var/run/docker.sock"
